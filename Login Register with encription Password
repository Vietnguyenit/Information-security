#include<iostream>
#include<iomanip>
#include<vector>
using namespace std;

struct InfoUser{
	string name ;
	int age ;
	string email ;
	string password ;
};

void Register(vector<InfoUser> &vtinfo );
void Register(vector<InfoUser> &vtinfo){
	bool kt = true;
	InfoUser info;
	cout<<"Create a new account "<<endl;
	cout<<"Enter Name ";
	cin>>info.name;
	cout<<"Enter age : ";
	cin>>info.age;
	LOOP : do{
		cout<<"Enter Email : ";
		cin>>info.email;
		cout<<"size"<<vtinfo.size();
		for(int i = 0 ; i < vtinfo.size() ; i++){
			if(info.email == vtinfo[i].email){
				kt = false;
				goto LOOP;
			}else{
				kt = true;
			}
		}
	}while(!kt);
	cout<<"Enter Password :";
	cin>>info.password;
	for(int i = 0 ; i < info.password.size(); i++){
		info.password[i] = info.password[i] ^ 10011111;
	}
	vtinfo.push_back(info);
}
string EncriptPassword(vector<InfoUser> &vtinfo , string &password);
string EncriptPassword(vector<InfoUser> &vtinfo , string &password){
	for(int i = 0 ; i < password.size() ; i++){
		password[i] = password[i] ^ 10011111 ;
	}
	return password;
}

bool Login(vector<InfoUser> &vtinfo);
bool Login(vector<InfoUser> &vtinfo){
	InfoUser info;
	bool check = false;
	int count = 0 ;
	while(count < 5){
		cin.ignore();
		cout<<"Enter Email :";
		cin>>info.email;
		cout<<"Enter Password : ";
		cin>>info.password;
		string s = EncriptPassword(vtinfo , info.password);
		cout<<s;
		for(int i = 0 ; i < vtinfo.size() ; i++){
			if(info.email == vtinfo[i].email && s == vtinfo[i].password){
				check = true;
			}
			else{
				check = false;
				count++;
			}
		}
		if(check == true){
			return check;
			break;
		}	
	}
	return check;
	
}

void ShowInfo(vector<InfoUser> &vtinfo);
void ShowInfo(vector<InfoUser> &vtinfo){
	cout<<setw(10)<<"Name"<<setw(15)<<"Age"<<setw(20)<<"Email"<<setw(40)<<"Password"<<endl;
	for(int i = 0 ; i < vtinfo.size() ; i++){
		cout<<setw(10)<<vtinfo[i].name<<setw(15)<<vtinfo[i].age<<setw(20)<<vtinfo[i].email<<setw(40)<<vtinfo[i].password<<endl;
	}
}

int main(){
	InfoUser inf;
	vector<InfoUser> info;
	int choose = 0 ;
	while(true){
		do{
			system("CLS");
			cout<<"1. Login "<<endl;
			cout<<"2. Register "<<endl;
			cout<<"3. Information User "<<endl;
			cout<<"4. Exit "<<endl;
			cout<<"You choose : ";
			cin>>choose;
			}while(choose > 4 || choose < 1  );	
			switch(choose){
				case 1 :
					if(Login(info) == false){
						exit(1);
					}else{
						cout<<"Login Success";
					}
					system("PAUSE");
					break;
				case 2 :
					Register(info);	
					break;
				case 3 :
					cout<<"Information of User "<<endl;
					ShowInfo(info);		
					system("PAUSE");
					break;
				case 4:
					exit(1);
				default:
					break;
			}
		}	
	return 0;
}
